# Primary Domain Welcome Page (generated at nginx startup)
# This config is deleted when primary content is enabled in the admin panel.
# The backend's NginxConfigService writes a replacement config to serve actual content.
server {
    listen 5537;
    server_name ${PRIMARY_DOMAIN} www.${PRIMARY_DOMAIN};

    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    location / {
        default_type text/html;
        return 200 '<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome - BFFLESS</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #ede8dd;
            color: #3a3a3a;
        }
        .container { text-align: center; padding: 2rem; max-width: 600px; }
        .logo { width: 160px; height: 160px; margin-bottom: 1.5rem; }
        h1 { font-size: 2.5rem; margin-bottom: 0.5rem; font-weight: 700; color: #3a3a3a; }
        p { font-size: 1.1rem; color: #4a4a4a; margin-bottom: 2rem; line-height: 1.6; }
        .admin-link {
            display: inline-block;
            padding: 0.75rem 2rem;
            background: #d96459;
            color: white;
            text-decoration: none;
            border-radius: 8px;
            font-weight: 600;
            transition: transform 0.2s, box-shadow 0.2s, background 0.2s;
        }
        .admin-link:hover {
            background: #c55449;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(217, 100, 89, 0.3);
        }
        .footer { margin-top: 3rem; font-size: 0.875rem; color: #4a4a4a; opacity: 0.7; }
    </style>
</head>
<body>
    <div class="container">
        <img class="logo" src="data:image/svg+xml;base64," alt="BFFLESS">
        <h1>Welcome to BFFLESS</h1>
        <p>Primary content has not been configured yet.</p>
        <a href="https://admin.${PRIMARY_DOMAIN}" class="admin-link">Go to Admin Panel</a>
        <div class="footer">
            <p>Configure primary content in Settings to display your site here.</p>
        </div>
    </div>
</body>
</html>';
    }
}
